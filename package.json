{
  "name": "wolfpack",
  "version": "0.26.0",
  "description": "Wolfpack - Lake Champlain ice fishing sonar simulator game built with Phaser",
  "main": "electron-main.js",
  "scripts": {
    "start": "http-server . -p 8080 -c-1",
    "dev": "http-server . -p 8080 -c-1",
    "build": "node build.js",
    "build:electron": "node build.js && npm run package:electron",
    "package:electron": "electron-builder --config electron-builder.json",
    "electron": "electron .",
    "preview": "npm run build && http-server dist -p 8081 -c-1",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "verify": "./verify_codebase.sh && npm run lint"
  },
  "keywords": [
    "phaser",
    "game",
    "fishing",
    "lake-trout",
    "vermont"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^9.38.0",
    "http-server": "^14.1.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
